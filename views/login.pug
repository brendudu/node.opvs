extends layout

block content
    .container
        .row
            .col-xs-6.col-xs-offset-3
                .panel.panel-primary#login
                    .panel-heading
                        h3.panel-title Login
                    .panel-body
                        h1.text-center Login
                        form(action='/' method='POST')
                            .form-group
                                .input-group
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-user
                                    input.form-control(placeholder='Username' name='user' id='user')
                            .form-group
                                .input-group
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-lock
                                    input.form-control(type='password' placeholder='Password' name='pass' id='pass')
                            button.btn.btn-block.btn-primary Submit
                            button.btn.btn-block.btn-link Sign Up